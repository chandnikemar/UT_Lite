<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.TppageActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/TPAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/TPToolBar"
                android:layout_width="match_parent"
                app:titleTextColor="@color/white"
                app:title="Transit Pass"
                app:navigationIcon="@drawable/ic_arrow_back_white"
                android:layout_height="?attr/actionBarSize">
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Button for Odisha -->
        <Button
            android:id="@+id/odishaButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Odisha"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"
            android:padding="16dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/TPAppBar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:cornerRadius="8dp" />

        <!-- Button for Chhattisgarh -->
        <Button
            android:id="@+id/chhattisgarhButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chhattisgarh"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"
            android:padding="16dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/odishaButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:cornerRadius="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
